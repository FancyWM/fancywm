<Window x:Class="FancyWM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="FancyWMMainWindow"
        xmlns:res="clr-namespace:FancyWM.Resources"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True"
        Focusable="True"
        ShowInTaskbar="False"
        Width="0"
        Height="0"
        Background="{x:Null}">
    <Window.Resources>
        <ContextMenu x:Key="NotifierContextMenu" Placement="MousePoint">
            <MenuItem Header="{x:Static res:Strings.Settings}" Click="OnSettingsClick" />
            <MenuItem Header="Sponsor ❤️" Click="OnSponsorClick" />
            <MenuItem Header="{x:Static res:Strings.About_Caption}" Click="OnAboutClick" />
            <MenuItem Header="{x:Static res:Strings.Quit}" Click="OnExitClick" />
        </ContextMenu>
    </Window.Resources>
</Window>
