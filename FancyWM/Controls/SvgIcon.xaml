                                </Path>
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Icon}" Value="stack">
                        <Setter Property="Content">
                            <Setter.Value>
                                <Path Fill="{Binding Color}">
                                    <Path.LayoutTransform>
                                        <ScaleTransform ScaleX="0.75" ScaleY="0.8" />
                                    </Path.LayoutTransform>
                                    <Path.RenderTransform>
                                        <TransformGroup>
                                            <TranslateTransform X="-1" Y="-1" />
                                        </TransformGroup>
                                    </Path.RenderTransform>
