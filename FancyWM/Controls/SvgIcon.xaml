                                    </Path.Data>
                                </Path>
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Icon}" Value="pull-up">
                        <Setter Property="Content">
                            <Setter.Value>
                                <Path Fill="{Binding Color}">
                                    <Path.LayoutTransform>
                                        <ScaleTransform ScaleX="0.6667" ScaleY="0.75" />
