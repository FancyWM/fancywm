<Window x:Class="FancyWM.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:FancyWM.Windows" 
        xmlns:controls="clr-namespace:FancyWM.Controls" 
        xmlns:pages="clr-namespace:FancyWM.Pages.Settings"
        mc:Ignorable="d"
        Title="About FancyWM" 
        Height="640" 
        Width="800"
        Foreground="{DynamicResource SystemControlBackgroundBaseHighBrush}"
        Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
        ui:ThemeManager.IsThemeAware="True"
        ui:WindowHelper.UseModernWindowStyle="True">
    <ui:ScrollViewerEx>
        <pages:AboutPage />
    </ui:ScrollViewerEx>
</Window>
